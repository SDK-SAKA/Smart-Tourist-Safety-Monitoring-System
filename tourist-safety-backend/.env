# .env - Environment Variables
# Copy this file and rename to .env, then update the values

# MongoDB Configuration
MONGODB_URL=mongodb://localhost:27017
# For MongoDB Atlas (cloud): mongodb+srv://<username>:<password>@cluster0.example.mongodb.net/
DATABASE_NAME=tourist_safety_db

# JWT Configuration
JWT_SECRET_KEY=your-super-secret-jwt-key-change-in-production-make-it-very-long-and-random
JWT_ALGORITHM=HS256

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Environment
ENVIRONMENT=development

# Logging
LOG_LEVEL=info

# Optional: Email Configuration (for future features)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=s.sreesanth22@gmail.com
SMTP_PASSWORD=Sreesanth2006#

# Optional: File Upload Configuration
MAX_FILE_SIZE=10485760  # 10MB
UPLOAD_PATH=./uploads

# Optional: Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60